<h1 id="facteur">Facteurs de risques initiaux</h1>

<div class="radio-row">
	{{ form_row(form.facteur.antecedentFamiliaux, {'attr': {'class': 'input radio-row'} }) }}
</div>

<div class="margin-space"></div>

