			{{ form_row(form.facteur.risqueHTA, {'attr': {'class': 'input radio-row'} }) }}
		</div>
		<div class="col-flex-3">
			{{ form_row(form.facteur.depuisHTA, {'attr': {'class': 'input'}, 'useStyle': true}) }}
		</div>
		<div class="col-flex-2 radio-row no-label">
			{{ form_row(form.facteur.traiteHTA, {'attr': {'class': 'input radio-row'} }) }}
		</div>
	</div>
	<div class="flex-table">
		<div class="col-flex-1">Diabète</div>
