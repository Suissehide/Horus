{% extends 'layout.html.twig' %}

{% block title %}
	Ajout d'un patient
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/index.css') }}">
	<style>
		.slide {
			min-height: auto;
			position: relative;
			padding: 0;
		}
	</style>
{% endblock %}

{% form_theme form 'form-theme.html.twig' %}

{% block page_content %}
	<div class="container-fluid">

		<div class="title-wrapper">
			Cr√©ation d'un patient
		</div>

		<div class="container-form">

			{{ form_start(form, {'attr': {'class': 'form validate-form'} }) }}
			{{ form_errors(form) }}

			<main class="slide" style="display: block">

				<h1 id="general">Identification</h1>

				<div class="row">
                    <div class="col col-md-12">
                        {{ form_row(form.general.civilite, {'attr': {'class': 'input'} }) }}
                        <div class="flex-nowrap">
                            {{ form_row(form.general.prenom, {'attr': {'class': 'input'} }) }}
                            {{ form_row(form.general.nom, {'attr': {'class': 'input'} }) }}
                        </div>
                        {{ form_row(form.general.nomNaissance, {'attr': {'class': 'input'} }) }}
                        {{ form_row(form.general.dateNaissance, {'attr': {'class': 'input js-datepicker'} }) }}
                        {{ form_row(form.general.sexe, {'attr': {'class': 'input  radio-row'} }) }}
                        {{ form_row(form.general.profession, {'attr': {'class': 'input'} }) }}
                        {{ form_row(form.general.statutActuel, {'attr': {'class': 'input'} }) }}
                        {{ form_row(form.general.niveauEtude, {'attr': {'class': 'input'} }) }}

                        <div class="separator-space"></div>
                        {{ form_row(form.general.feuille, {'attr': {'class': 'input'} }) }}
                    </div>
                </div>
                <div class="container-form-btn btn-block">
                    <button class="form-btn btn-default" type="button">Annuler</button>
                    {{ form_row(form.create, {'attr': {'class': 'form-btn btn-save'} }) }}
                </div>
				<div class="margin-space"></div>

			</main>

			{{ form_row(form._token) }}
			{{ form_end(form, {'render_rest' : false}) }}
		</div>
	</div>
{% endblock %}

{% block javascripts %}
    <script>
        // date js
        jQuery(document).ready(function () {
            $('.js-datepicker').datepicker({
                language: 'fr',
                clearButton: true,
            });
        });

        //remove history btn
        $('main').find('.history').remove();
    </script>
{% endblock %}
