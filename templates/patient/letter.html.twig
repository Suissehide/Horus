                            <i aria-hidden="true" class="fa fa-edit"></i>Modifier</a>
                    </div>
                </div>
            </section>
			
            <!-- Main -->
            <main>
                <textarea id="test" class='input letter__content' no-resize>{{letter.content}}</textarea>
            </mail>

		</div>
