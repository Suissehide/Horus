{% endblock %}

{% block javascripts %}
    <script>
        $('.letter__content').height($('.letter__content').prop('scrollHeight') + 'px');

        $('#copy').click(function() {
            $(".letter__content").select();
            document.execCommand('copy');
        })

    </script>
{% endblock %}
