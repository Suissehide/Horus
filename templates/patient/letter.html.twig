                        <h1 id="profile">
                            PATIENT 
                            <span>{{ patient.general.prenom }} {{ patient.general.nom }}</span>
                        </h1>
                    </div>

                    <div class="btn-block">
                        <a href="{{ path('index_patient') }}" class="form-btn btn-default">
